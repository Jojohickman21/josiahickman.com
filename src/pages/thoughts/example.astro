---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Viewing College life as a K-armed bandit problem - Josiah Hickman" showDither={false}>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,200..900;1,200..900&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">

  <div class="w-full bg-white dark:bg-neutral-900 min-h-screen pt-32 pb-20">
    <article class="max-w-3xl mx-auto px-6 pl-12 md:pl-24">
      
      <!-- Header -->
      <header class="mb-12">
        <h1 class="text-4xl md:text-5xl font-serif italic text-neutral-900 dark:text-neutral-100 mb-4">
          Viewing College life as a K-armed bandit problem
        </h1>
        <div class="flex items-center gap-4 text-sm font-mono text-neutral-500 dark:text-neutral-400">
          <time datetime="2025-12-25">Dec 2025</time>
          <span>•</span>
          <span>12–15 mins</span>
        </div>
      </header>

      <hr class="border-neutral-200 dark:border-white/10 mb-12" />

      <!-- Text Content -->
      <div class="font-serif text-lg md:text-xl leading-relaxed text-neutral-800 dark:text-neutral-200 space-y-6">
        <p>
          Viewing college life as a K-armed bandit problem.
        </p>
        <p class="italic text-neutral-500">
           (Enter your text here...)
        </p>
      </div>

    </article>
  </div>
</Layout>

<style>
  .font-serif {
    font-family: 'Crimson Pro', serif;
  }
  .font-mono {
    font-family: 'JetBrains Mono', monospace;
  }
</style>
